<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="Ministers"
        type="com.example.tiistai25.MemberOfParliament" />
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/titleFragment"
            android:name="com.example.tiistai25.TitleFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="178dp"
            android:text="@string/searchButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/parties"
            app:layout_constraintTop_toBottomOf="@+id/parties" />

        <TextView
            android:id="@+id/party"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="31dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/parties"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/minister" />

        <TextView
            android:id="@+id/minister"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="13dp"
            android:text="@string/minister"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/party"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/parties"
            android:layout_width="277dp"
            android:layout_height="56dp"
            android:layout_marginBottom="25dp"
            android:text="@string/searchByParties"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/search_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/party" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>